@model BlogSystem.Web.Areas.Administration.ViewModels.Posts.PostViewModel

@{
    ViewBag.Title = "Edit Post";
}

<h2>@ViewBag.Title</h2>
<hr />

@{
    var selectList = new SelectList(ViewBag.Categories, "Id", "Name");
}

@using (Html.BeginForm("Edit", "Posts", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
    @Html.HiddenFor(model => model.AuthorId)

    @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CreatedOn)

    <div class="form-group">
        @Html.LabelFor(model => model.Title)

        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Title, string.Empty, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Content)

        @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Content, string.Empty, new { @class = "text-danger" })
    </div>

    @Html.DropDownListFor(m => m.CategoryId, selectList, "Select Category")

    <div class="form-group">
        <button type="submit" class="btn btn-success">Save</button>

        @Html.ActionLink("Cancel", "Index", new { area = "Administration" }, new { @class = "btn btn-danger" })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}