@model IEnumerable<BlogSystem.Data.Models.Setting>

@{
    ViewBag.Title = "All Settings";
}

<h2>@ViewBag.Title</h2>

<table class="table table-inverse">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Key)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Key)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.ActionLink("Update", "Update", new { id = item.Key}, new { @class="btn btn-info "})
                </td>
            </tr>
        }
    </tbody>
</table>