@model BlogSystem.Web.ViewModels.Manage.UserAvatarViewModel

@{
    ViewBag.Title = "Change Avatar";
}

<section class="post-container">
    <div class="post-content">
        <h2>Add avatar to user profile</h2>

        <section>
            <strong>Current Avatar</strong>
            <img src="@Url.Action("Avatar", "Account", new { username = User.Identity.Name })" alt="Avatar" class="rounded-circle" />
        </section>

        @using (Html.BeginForm("ChangeAvatar", "Manage", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(string.Empty, new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Avatar, new { @class = "col-md-2 control-label" })

                <div class="col-md-10">
                    <input type="file" name="Avatar" class="form-control" />
                </div>
            </div>

            <button type="submit" class="btn btn-success">Change Avatar</button>
        }
    </div>
</section>