@using BlogSystem.Web.Infrastructure.HtmlHelpers
@model BlogSystem.Web.ViewModels.Home.IndexPageViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <h2 class="pull-left">@ViewBag.Title</h2>
    </div>
</div>

<hr />

<div class="row">
    @if (Model.Posts.Any())
    {
        foreach (var post in Model.Posts)
        {
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="col-md-12">
                            <h3>@Html.RouteLink(post.Title, "Post", new { id = post.Id })</h3>
                           
                            <hr/>

                            <ul class="list-unstyled list-inline blog-post-tags">
                                <li>
                                    <span class="glyphicon glyphicon-calendar"></span>
                                    @post.CreatedOn
                                </li>
                                <li>
                                    <span class="glyphicon glyphicon-pencil"></span>
                                    @post.Author
                                </li>
                                <li>
                                    <a href="/Posts/@post.Id#comments">
                                        <span class="glyphicon glyphicon-comment"></span>
                                        @(post.CommentsCount) comments
                                    </a>
                                </li>
                            </ul>

                            <hr/>
                            
                            <div class="col-md-12">
                                @{
                                    var content = Html.TruncateHtmlContent(post.Content);
                                }

                                @Html.Raw(content)
                            </div>
                            
                            <div class="col-md-12">
                                <a href="@Url.Action("Post", "Blog", new { id = post.Id })" class="btn btn-danger">
                                    <span class="glyphicon glyphicon-plus"></span>
                                    Read More
                                </a>
                            </div>
                        </div>
                    </div>
                </div>         
            </div>
        }
    }
    else
    {
        <div class="col-md-12">
            <h2>No posts available.</h2>
        </div>
    }
</div>


@if (Model.PagesCount > 0)
{
    <!--Pagination-->
    <div class="text-center">
        <ul class="pagination">
            <li>
                <a href="/?page=@Model.PreviousPage">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
            </li>

            @for (int i = 1; i <= Model.PagesCount; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <li class="active">
                        <a href="/?page=@i">@i</a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="/?page=@i">@i</a>
                    </li>
                }
            }
            
            <li>
                <a href="/?page=@Model.NextPage">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </li>
        </ul>
    </div>
    <!--End Pagination-->
}