@model BlogSystem.Web.ViewModels.Sidebar.SidebarViewModel

<div class="widget">
    <h5 class="widgetheading">Account</h5>
    @Html.Partial("_LoginPartial")
</div>

<div class="widget">
    <h5 class="widgetheading">Latest posts</h5>
    <ul class="recent">
        @foreach (var post in Model.RecentPosts)
        {
            <li>
                <h6 class="pull-left">@Html.RouteLink(post.Title, "Post", new { id = post.Id })</h6>
                <span class="pull-right">@post.CreatedOn</span>
            </li>
        }
    </ul>
</div>

