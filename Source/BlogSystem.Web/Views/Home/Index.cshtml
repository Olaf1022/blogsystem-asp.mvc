@model BlogSystem.Web.ViewModels.Home.IndexPageViewModel

@{
    ViewBag.Title = "Home Page";
}

@if (Model.Posts.Any())
{
    foreach (var post in Model.Posts)
    {
        <article class="post-container">
            <header class="post-header">
                <h2 class="post-title">
                    @Html.RouteLink(post.Title, "Post", new { id = post.Id })
                </h2>
                <ul class="post-meta">
                    <li>
                        <i class="fa fa-clock-o" aria-hidden="true"></i>
                        @Html.DisplayFor(model => post.CreatedOn)
                    </li>
                    <li>
                        <i class="fa fa-user" aria-hidden="true"></i>
                        @Html.DisplayFor(model => post.Author)
                    </li>
                    <li>
                        <a href="@Url.RouteUrl("Post", new {id = post.Id})#comments">
                            <i class="fa fa-comments" aria-hidden="true"></i>
                            @Html.DisplayFor(model => post.CommentsCount) comments
                        </a>
                    </li>
                </ul>
                
                <!--<a href="@Url.RouteUrl("Post", new {id = post.Id})" class="btn btn-default" title="@post.Title">
                    Read more!
                </a>-->
            </header>
        </article>
    }
}

