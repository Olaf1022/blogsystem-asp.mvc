@model BlogSystem.Web.ViewModels.Home.IndexPageViewModel

@{
    ViewBag.Title = "Home Page";
}

@if (Model.Posts.Any())
{
    foreach (var post in Model.Posts)
    {
        <article>
            <div class="post-slider">
                <div class="post-heading">
                    <h3>
                        <a href="@post.Url">@post.Title</a>
                    </h3>
                </div>
            </div>

            <div class="bottom-article">
                <ul class="meta-post">
                    <li>
                        <i class="fa fa-calendar" aria-hidden="true"></i>
                        @Html.DisplayFor(model => post.CreatedOn)
                    </li>
                    <li>
                        <i class="fa fa-user" aria-hidden="true"></i>
                        @Html.DisplayFor(model => post.Author)
                    </li>
                    <li>
                        <i class="fa fa-comment" aria-hidden="true"></i>
                        <a href="@post.Url#comments">
                            @Html.DisplayFor(model => post.CommentsCount) comments
                        </a>
                    </li>
                </ul>
                <a href="@post.Url" class="pull-right">
                    Continue reading <i class="fa fa-angle-right" aria-hidden="true"></i>
                </a>
            </div>
        </article>
    }
}
else
{
    <h2>No posts available.</h2>
}

@if (Model.PagesCount > 0)
{
    <div id="pagination">
        <span class="all">Page @Model.CurrentPage of @Model.PagesCount</span>

        @for (int i = 1; i <= Model.PagesCount; i++)
        {
            if (i == Model.CurrentPage)
            {
                <span class="current">@i</span>
            }
            else
            {
                @Html.ActionLink($"{i}", "Index", new { area = string.Empty, page = i }, new { @class= "inactive" })
            }
        }
    </div>
}