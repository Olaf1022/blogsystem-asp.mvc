<!doctype html>
<html lang="en-US">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="robots" content="index, follow">
        <meta name="revisit-after" content="1 days">
        <meta name="author" content="@ViewBag.Settings["Author"]">
        <meta name="keywords" content="@ViewBag.Settings["Keywords"]">
        <meta name="description" content="@ViewBag.Settings["Description"]">
        
        <meta property="og:type" content="article">
        <meta property="og:title" content="@ViewBag.Settings["Title"]">
        <meta property="og:description" content="@ViewBag.Settings["Description"]">
        <meta property="og:site_name" content="@ViewBag.Settings["Title"]">

        <title>@ViewBag.Title - @ViewBag.Settings["Title"]</title>

        @Styles.Render("~/Content/css")
        
