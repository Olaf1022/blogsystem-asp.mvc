<!doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="robots" content="index, follow" />
        <meta name="revisit-after" content="1 days" />
        <meta name="author" content="@ViewBag.Settings["Author"]" />
        <meta name="description" content="@ViewBag.Settings["Description"]" />
        <meta name="keywords" content="@ViewBag.Settings["Keywords"]" />

        <title>@ViewBag.Title - @ViewBag.Settings["Title"]</title>

        @Styles.Render("~/Content/css")
        
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        @Html.Partial("_Header")
        
        <section id="wrap" class="container">
            <div class="row">
                <div class="col-md-8 col-lg-8">
                    @RenderBody()
                </div>
                <div class="col-md-4 col-lg-4">
                    @{
                        Html.RenderAction("Index", "Sidebar");
                    }
                </div>
            </div>
        </section>
        
        @Html.Partial("_Footer")
    
