@model BlogSystem.Web.Areas.Administration.ViewModels.Posts.IndexPostsPageViewModel

@{
    ViewBag.Title = "All Posts";
}

<header>
    <h2 class="float-left">@ViewBag.Title</h2>

    <a href="@Url.Action("Create", "Posts", new {area = "Administration"})" class="btn btn-success float-right">
        <span class="fa fa-plus" aria-hidden="true"></span>
        Create New Post
    </a>
</header>

@if (Model.Posts.Any())
{
    <table class="table table-inverse">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Created On</th>
                <th>Modified On</th>
                <th>Author</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model.Posts)
                {
                <tr>
                    <td>@Html.DisplayFor(m => post.Id)</td>
                    <td>@Html.DisplayFor(m => post.Title)</td>
                    <td>@Html.DisplayFor(m => post.CreatedOn)</td>
                    <td>@Html.DisplayFor(m => post.ModifiedOn)</td>
                    <td>@Html.DisplayFor(m => post.AuthorUserName)</td>
                    <td>
                        <div class="btn-group">
                            <a href="@Url.Action("Edit", "Posts", new {area = "Administration", id = post.Id})" class="btn btn-warning">
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                Edit
                            </a>
                            <a href="@Url.Action("Delete", "Posts", new {area = "Administration", id = post.Id})" class="btn btn-danger">
                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>No posts available.</h2>
}

@if (Model.PagesCount > 0)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item">
                <a href="@Url.Action("Index", new {area = "Administration", page = Model.PreviousPage})" class="page-link" aria-label="Previous">
                    <i class="fa fa-arrow-left" aria-hidden="true"></i>
                    <span class="sr-only">Previous</span>
                </a>
            </li>

            @for (int i = 1; i <= Model.PagesCount; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <li class="page-item active">
                        @Html.ActionLink($"{i}", "Index", new { area = "Administration", page = i }, new { @class= "page-link" })
                    </li>
                }
                else
                {
                    <li>
                        @Html.ActionLink($"{i}", "Index", new { area = "Administration", page = i }, new { @class = "page-link" })
                    </li>
                }
            }

            <li class="page-item">
                <a href="@Url.Action("Index", new {area = "Administration", page = Model.NextPage})" class="page-link" aria-label="Next">
                    <i class="fa fa-arrow-right" aria-hidden="true"></i>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>

    </nav>
}