@model BlogSystem.Web.Areas.Administration.ViewModels.Posts.IndexPostsPageViewModel

@{
    ViewBag.Title = "All Posts";
}

<section class="post-container">
    <div class="post-content">
        <p>
            <a href="@Url.Action("Create", "Posts", new {area = "Administration"})" class="btn btn-success">
                <span class="fa fa-plus" aria-hidden="true"></span>
                Create New Post
            </a>
        </p>

        @if (Model.Posts.Any())
        {
            <table class="table table-condensed table-hover">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Title</th>
                        <th>Created On</th>
                        <th>Modified On</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var post in Model.Posts)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => post.AuthorUserName)</td>
                        <td>@Html.DisplayFor(m => post.Title)</td>
                        <td>@Html.DisplayFor(m => post.CreatedOn)</td>
                        <td>@Html.DisplayFor(m => post.ModifiedOn)</td>
                        <td>
                            <div class="btn-group">
                                <a href="@Url.Action("Edit", "Posts", new {area = "Administration", id = post.Id})" class="btn btn-warning">
                                    <i class="glyphicon glyphicon-edit"></i>
                                    Edit
                                </a>
                                <a href="@Url.Action("Delete", "Posts", new {area = "Administration", id = post.Id})" class="btn btn-danger">
                                    <i class="glyphicon glyphicon-trash"></i>
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <h2>No posts available.</h2>
        }
    </div>
</section>

@if (Model.PagesCount > 0)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li>
                <a href="@Url.Action("Index", new { area = "Administration", page = Model.PreviousPage })">
                    <i class="fa fa-arrow-left" aria-hidden="true"></i>
                </a>
            </li>

            @for (int i = 1; i <= Model.PagesCount; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <li class="active">
                        @Html.ActionLink($"{i}", "Index", new { area = "Administration", page = i })
                    </li>
                }
                else
                {
                    <li>
                        @Html.ActionLink($"{i}", "Index", new { area = "Administration", page = i })
                    </li>
                }
            }
            
            <li>
                <a href="@Url.Action("Index", new { area = "Administration", page = Model.NextPage })">
                    <i class="fa fa-arrow-right" aria-hidden="true"></i>
                </a>
            </li>
        </ul>
    </nav>
}