@model BlogSystem.Web.Areas.Administration.ViewModels.Comments.IndexCommentsPageViewModel

@{
    ViewBag.Title = "All Comments";
}

        @if (Model.Comments.Any())
        {
            <table class="table table-condensed table-hover">
                <thead>
                    <tr>
                        <th>Post Title</th>
                        <th>User</th>
                        <th>Created On</th>
                        <th>Modified On</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var comment in Model.Comments)
                    {
                        <tr>
                            <td>
                                @Html.RouteLink(comment.PostTitle, "Post", new { Area = string.Empty, Id = comment.PostId })
                            </td>
                            <td>
                                @Html.DisplayFor(mode => comment.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => comment.CreatedOn)
                            </td>

                            <td>
                                @Html.DisplayFor(model => comment.ModifiedOn)
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="@Url.Action("Edit", "Comments", new { area = "Administration", id = comment.Id })" class="btn btn-warning">
                                        <i class="glyphicon glyphicon-edit"></i>
                                        Edit
                                    </a>
                                    <a href="@Url.Action("Delete", "Comments", new { area = "Administration", id = comment.Id })" class="btn btn-danger">
                                        <i class="glyphicon glyphicon-trash"></i>
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h2>No comments available.</h2>
        }

 @if (Model.PagesCount > 0)
 {
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li>
                <a href="@Url.Action("Index", new { area = "Administration", page = Model.PreviousPage })">
                    <i class="fa fa-arrow-left" aria-hidden="true"></i>
                </a>
            </li>

            @for (int i = 1; i <= Model.PagesCount; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <li class="active">
                        @Html.ActionLink($"{i}", "Index", new { area = "Administration", page = i })
                    </li>
                }
                else
                {
                    <li>
                        @Html.ActionLink($"{i}", "Index", new { area = "Administration", page = i })
                    </li>
                }
            }

            <li>
                <a href="@Url.Action("Index", new { area = "Administration", page = Model.NextPage })">
                    <i class="fa fa-arrow-right" aria-hidden="true"></i>
                </a>
            </li>
        </ul>
    </nav>
 }